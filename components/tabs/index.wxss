/* components/common/tabs/index.wxss */
.tabs {
  width: 100%;
  padding: 20rpx 0;
}

.scroll-view_H {
  white-space: nowrap;
}

.scroll-view-item_H {
  display: inline-block;
  height: 65rpx;
  margin: auto;
  text-align: center;
}

.tab-text {
  display: inline-block;
  color: #1C1C1C;
  padding: 0 0 10rpx 0;
  border-bottom: 6rpx solid transparent;
  font-size: 32rpx;
}

.activeTab {
  color: #15A8B9;
  font-weight: bold;
  border-bottom-color: #15A8B9;
}